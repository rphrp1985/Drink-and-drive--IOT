<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/images"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"

        />

    <androidx.cardview.widget.CardView

        android:id="@+id/card"
        android:alpha="0.8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            />

        <TextView
            android:id="@+id/car_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Your Car Number is 123"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="20sp"
            android:lineSpacingExtra="4sp" />

        <TextView
            android:id="@+id/eme_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Emergency Numbers is "
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textSize="14sp"

            android:letterSpacing="-0.01"
            android:lineSpacingExtra="2sp" />

        <Button
            android:id="@+id/car_num_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="change car number"
            android:textAllCaps="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="14sp"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="2sp"
            app:cornerRadius="4dp"
            app:backgroundTint="#742ddd"
            />
        <Button
            android:id="@+id/eme_num_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="change Emergency number"
            android:textAllCaps="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="14sp"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="2sp"
            app:cornerRadius="4dp"
            app:backgroundTint="#742ddd"
            />
    </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/button"
        app:layout_constraintTop_toBottomOf="@id/card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Predictions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />



</androidx.constraintlayout.widget.ConstraintLayout>